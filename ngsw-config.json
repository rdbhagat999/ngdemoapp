{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ],
        "urls": [
          "https://fonts.gstatic.com",
          "https://fonts.googleapis.com/css2?family=Roboto:wght@400&display=swap",
          "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/fonts/*.woff2?v=4.7.0",
          "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/*.css",
          "https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.*"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "employees",
      "urls": [
        "http://localhost:3000/employees",
        "https://picsum.photos/id/*/*.webp"
      ],
      "cacheConfig": {
        "maxAge": "30d",
        "maxSize": 15,
        "strategy": "freshness",
        "timeout": "6s"
      }
    }
  ]
}
